# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                   controllers.Application.index()
GET         /hw                                 controllers.Application.helloWorld()

GET         /customers/listRestaurants          controllers.CustomerApplication.listRestaurants
GET         /customers/getRestaurant/:id        controllers.CustomerApplication.getRestaurant(id: Long)
POST        /customers/create                   controllers.CustomerApplication.doSignUp()
PUT         /customers/update                   controllers.CustomerApplication.updateUser()
GET         /customers/profile                  controllers.CustomerApplication.profile()
GET         /temp/getCustomerById/:id           controllers.TempApplication.getCustomerById(id: Long)




POST        /restaurants/create                 controllers.RestaurantApplication.doSignUp()
PUT         /restaurants/update                 controllers.RestaurantApplication.updateUser()
GET         /restaurants/profile                controllers.RestaurantApplication.profile()

GET         /waitTimes                          controllers.WaitTimeApplication.getWaitTime(restaurant_id: Long, party_size: Long)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                       controllers.Assets.at(path="/public", file)


